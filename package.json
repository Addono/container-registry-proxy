{
  "name": "container-registry-proxy",
  "version": "4.4.8",
  "description": "A simple container registry proxy.",
  "main": "bin/index.js",
  "repository": "https://github.com/Addono/container-registry-proxy.git",
  "author": "Adriaan Knapen <hi@aknapen.nl>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest --roots src --coverage",
    "dev": "ts-node-dev src/index.ts",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect",
    "prepublishOnly": "yarn build",
    "cz": "npx git-cz"
  },
  "bin": {
    "container-registry-proxy": "./bin/index.js",
    "crp": "./bin/index.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "axios": "^0.20.0",
    "commander": "^6.0.0",
    "snyk": "^1.396.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.6",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "codecov": "^3.7.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "semantic-release-docker": "^2.2.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 110
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn install --frozen-lockfile"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "docker build -t addono/container-registry-proxy ."
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "semantic-release-docker",
        {
          "name": "addono/container-registry-proxy"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{json,js,ts,css,md,yml,yaml}": "prettier --write"
  },
  "snyk": true
}
